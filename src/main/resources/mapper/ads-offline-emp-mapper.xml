<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ofl.promotion.manage.emp.mapper.IAdsOfflineEmpMapper">
	<!-- 返回值映射map -->
	<resultMap id="oflEmpMapper" type="com.ofl.promotion.manage.emp.entity.AdsOfflineEmp">
			<result property="empId" column="emp_id" />
			<result property="empName" column="emp_name" />
			<result property="phone" column="phone" />
			<result property="delFlag" column="del_flag" />
			<result property="insertTime" column="insert_time" />
			<result property="updateTime" column="update_time" />
	</resultMap>

	<!-- 查询数量公共sql -->
	<sql id="count_Tail">
		select count(1) from ofl_emp record
	</sql>

	<!-- 查询字段公共sql -->
	<sql id="selectAllColumns">
		emp_id,emp_name,phone,del_flag, insert_time,update_time
	</sql>

	<!-- 查询单个实体 -->
	<select id="findOne" resultMap="oflEmpMapper"
			parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpFilter" >
		select
		<include refid="selectAllColumns"/>
		from ofl_emp
		<where>
			<if test="phone != null">
				phone = #{phone}
			</if>
		</where>
	</select>

	<!-- 新增列处理 -->
	<sql id="sql_add_columns">
		<trim suffixOverrides=",">
			<if test="empId != null">emp_id,</if>
			<if test="empName != null">emp_name,</if>
			<if test="phone != null">phone,</if>
			<if test="delFlag != null">del_flag,</if>
			insert_time,
			update_time,
		</trim>
	</sql>

	<sql id="sql_add_properties">
		<trim suffixOverrides=",">
				<if test="empId != null">#{empId},</if>
				<if test="empName != null">#{empName},</if>
				<if test="phone != null">#{phone},</if>
				<if test="delFlag != null">#{delFlag},</if>
				unix_timestamp(),
				unix_timestamp(),
		</trim>
	</sql>

	<!-- 新增 -->
	<insert id="add" parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpFilter">
		insert into ofl_emp(
			<include refid="sql_add_columns"/>
		)values(
			<include refid="sql_add_properties"/>
		)
	</insert>

	<!-- 编辑 -->
	<update id="updateOflEmp" parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpFilter">
		update ofl_emp record
			<set>
					<if test = "empId != null ">
						emp_id = #{empId},
					</if>
					<if test = "empName != null ">
						emp_name = #{empName},
					</if>
					<if test = "phone != null ">
						phone = #{phone},
					</if>
					<if test = "delFlag != null ">
						del_flag = #{delFlag},
					</if>
					<if test = "insertTime != null ">
						insert_time = #{insertTime},
					</if>
					<if test = "updateTime != null ">
						update_time = #{updateTime}
					</if>
			</set>
		where emp_id = #{emp_id}
	</update>


</mapper>
