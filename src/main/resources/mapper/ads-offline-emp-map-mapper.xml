<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ofl.promotion.manage.emp.mapper.IAdsOfflineEmpMapMapper">
	<!-- 返回值映射map -->
	<resultMap id="oflOrgEmpMapMapper" type="com.ofl.promotion.manage.emp.entity.AdsOfflineEmpMap">
		<result property="mapId" column="map_id" />
		<result property="empId" column="emp_id" />
		<result property="orgId" column="org_id" />
		<result property="delFlag" column="del_flag" />
		<result property="insertTime" column="insert_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<resultMap id="oflEmpMapper" type="com.ofl.promotion.manage.emp.entity.AdsOfflineEmp">
		<result property="empId" column="emp_id" />
		<result property="empName" column="emp_name" />
		<result property="phone" column="phone" />
		<result property="delFlag" column="del_flag" />
		<result property="insertTime" column="insert_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<!-- 查询字段公共sql -->
	<sql id="selectAllColumns">
		emp_id,emp_name,phone,del_flag, insert_time,update_time
	</sql>

	<!-- 查询单个实体 -->
	<select id="findOne" resultMap="oflOrgEmpMapMapper"
			parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpMapFilter" >
		select
		<include refid="selectAllColumns"/>
		from ofl_emp
		<where>
			<if test="phone != null">
				phone = #{phone}
			</if>
		</where>
	</select>

	<!-- 查询单个实体 -->
	<select id="queryLead" resultMap="oflOrgEmpMapMapper"
			parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpMapFilter" >
		select
			m.map_id,
			m.emp_id,
			m.org_id,
			m.del_flag,
			m.insert_time,
			m.update_time
		from ofl_org_emp_map m
		LEFT join ofl_emp e
		on(m.emp_id = e.emp_id)
		<where>
			<if test="phones != null">
				e.phone in(${phones})
			</if>
		</where>
	</select>

	<!-- 新增列处理 -->
	<sql id="sql_add_columns">
		<trim suffixOverrides=",">
			<if test="empId != null">emp_id,</if>
			<if test="empName != null">emp_name,</if>
			<if test="phone != null">phone,</if>
			<if test="delFlag != null">del_flag,</if>
			insert_time,
			update_time,
		</trim>
	</sql>

	<sql id="sql_add_properties">
		<trim suffixOverrides=",">
				<if test="empId != null">#{empId},</if>
				<if test="empName != null">#{empName},</if>
				<if test="phone != null">#{phone},</if>
				<if test="delFlag != null">#{delFlag},</if>
				unix_timestamp(),
				unix_timestamp(),
		</trim>		
	</sql>
	
	<!-- 新增 -->
	<insert id="addOflEmp" parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpMapFilter">
		insert into ofl_emp(
			<include refid="sql_add_columns"/>
		)values(
			<include refid="sql_add_properties"/>
		)
	</insert>

	<!-- 编辑 -->
	<update id="updateOflEmp" parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpMapFilter">
		update ofl_emp record 
			<set>
					<if test = "empId != null ">
						emp_id = #{empId},
					</if>
					<if test = "empName != null ">
						emp_name = #{empName},
					</if>
					<if test = "phone != null ">
						phone = #{phone},
					</if>
					<if test = "delFlag != null ">
						del_flag = #{delFlag},
					</if>
					<if test = "insertTime != null ">
						insert_time = #{insertTime},
					</if>
					<if test = "updateTime != null ">
						update_time = #{updateTime}
					</if>
			</set>
		where emp_id = #{emp_id}
	</update>
	
	<select id="findEmpMapByOrgId" parameterType="com.ofl.promotion.manage.emp.entity.filter.AdsOfflineEmpMapFilter"
			resultMap="oflEmpMapper">
		SELECT
			e.emp_id,
			e.emp_name,
			e.phone
		FROM
			ofl_org_emp_map em
			LEFT JOIN ofl_emp e ON ( em.emp_id = e.emp_id )
			LEFT JOIN ofl_org o ON ( em.org_id = o.org_id )
		<where>
			<if test="organizeId != null">
				o.org_id = #{organizeId}
			</if>
		</where>
	</select>
</mapper>
